general {
    colors = true
    interval = 5
}

order += "read_file keyboard_layout"
order += "wireless _first_"
order += "memory"
order += "battery all"
order += "tztime local"

read_file keyboard_layout {
    path = "/tmp/current_layout"
    format = "‚å® %content"
}

wireless _first_ {
    format_up = "WiFi: %essid %quality"
    format_down = "WiFi: down"
}

memory {
    format = "RAM: %used/%total"
    threshold_degraded = "10%"
    format_degraded = "RAM: %free"
}

battery all {
    format = "BAT: %percentage"
}

tztime local {
    format = "Day: %d | %H:%M"
}
